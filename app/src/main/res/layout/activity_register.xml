<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".RegisterActivity"
    android:background="@drawable/background">
    <RelativeLayout
        android:id="@+id/createAtas"
        android:layout_width="match_parent"
        android:layout_height="150sp">
        <ImageView
            android:id="@+id/logoCreate"
            android:layout_width="200dp"
            android:layout_height="50dp"
            android:paddingLeft="20sp"
            android:paddingTop="20sp"
            android:src="@drawable/logo2" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/logoCreate"
            android:layout_marginTop="20sp"
            android:fontFamily="@font/bold"
            android:paddingLeft="20sp"
            android:text="Create Account"
            android:textColor="@color/white"
            android:textSize="24sp" />
    </RelativeLayout>
    <RelativeLayout
        android:id="@+id/loginBawah"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/createAtas"
        android:layout_marginTop="-20dp"
        android:background="@drawable/bgloginbawah"
        android:paddingLeft="20sp"
        android:paddingTop="10sp"
        android:paddingRight="20sp"
        android:paddingBottom="10sp">


            <EditText
                android:id="@+id/editTextEmail"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_marginTop="20dp"
                android:background="@drawable/edittext_bg"
                android:fontFamily="@font/semibold"
                android:hint="Enter your email"
                android:minHeight="50dp"
                android:paddingLeft="20dp"
                android:paddingTop="10dp"
                android:paddingBottom="10dp"
                android:textColor="#3a3a3a"
                android:textSize="16sp" />

            <EditText
                android:id="@+id/editTextName"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_below="@+id/editTextEmail"
                android:layout_marginTop="20dp"
                android:background="@drawable/edittext_bg"
                android:fontFamily="@font/semibold"
                android:hint="Enter your name"
                android:minHeight="50dp"
                android:paddingLeft="20dp"
                android:paddingTop="10dp"
                android:paddingBottom="10dp"
                android:textColor="#3a3a3a"
                android:textSize="16sp" />


            <EditText
                android:id="@+id/editTextAlamat"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_below="@+id/editTextName"
                android:layout_marginTop="20dp"
                android:background="@drawable/edittext_bg"
                android:fontFamily="@font/semibold"
                android:hint="Enter your alamat"
                android:minHeight="50dp"
                android:paddingLeft="20dp"
                android:paddingTop="10dp"
                android:paddingBottom="10dp"
                android:textColor="#3a3a3a"
                android:textSize="16sp" />

            <EditText
                android:id="@+id/editTextKelas"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_below="@+id/editTextAlamat"
                android:layout_marginTop="20dp"
                android:background="@drawable/edittext_bg"
                android:fontFamily="@font/semibold"
                android:hint="Enter your kelas"
                android:minHeight="50dp"
                android:paddingLeft="20dp"
                android:paddingTop="10dp"
                android:paddingBottom="10dp"
                android:textColor="#3a3a3a"
                android:textSize="16sp" />

            <EditText
                android:id="@+id/editTextPassword"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_below="@+id/editTextKelas"
                android:layout_marginTop="20dp"
                android:background="@drawable/edittext_bg"
                android:fontFamily="@font/semibold"
                android:hint="Enter your password"
                android:inputType="textPassword"
                android:minHeight="50dp"
                android:paddingLeft="20dp"
                android:paddingTop="10dp"
                android:paddingBottom="10dp"
                android:textColor="#3a3a3a"
                android:textSize="16sp" />
            <EditText
                android:id="@+id/editTextRepeatPassword"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_below="@+id/editTextPassword"
                android:layout_marginTop="20dp"
                android:background="@drawable/edittext_bg"
                android:fontFamily="@font/semibold"
                android:hint="Enter your repeat password"
                android:inputType="textPassword"
                android:minHeight="50dp"
                android:paddingLeft="20dp"
                android:paddingTop="10dp"
                android:paddingBottom="10dp"
                android:textColor="#3a3a3a"
                android:textSize="16sp" />


            <Button
                android:id="@+id/btnRegister"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/editTextRepeatPassword"
                android:layout_marginTop="10dp"
                android:backgroundTint="#FE2659"
                android:fontFamily="@font/bold"
                android:text="Sign In"
                android:textSize="16sp"
                app:cornerRadius="10sp" />

            <TextView
                android:id="@+id/txtBckLogin"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/btnRegister"
                android:layout_marginTop="10sp"
                android:fontFamily="@font/semibold"
                android:gravity="center"
                android:text="Back Login"
                android:textColor="#fe2659"
                android:textSize="14sp" />
    </RelativeLayout>

</RelativeLayout>